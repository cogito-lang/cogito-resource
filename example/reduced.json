{
  "Resources": {
    "CogitoResource": {
      "Type": "Custom::CogitoResource",
      "Version": "0.0.1",
      "Properties": {
        "ServiceToken": "arn:aws:lambda:us-east-1:952130404698:function:cogito-dev-cogito",
        "Policy": { "Fn::Join": ["\n", [
          "DENY ec2:RebootInstances, ec2:StopInstances, ec2:TerminateInstances, ec2:DeleteVolume ON *;",
          "DENY logs:DeleteLogGroup, logs:DeleteLogStream, logs:DeleteRetentionPolicy, logs:PutRetentionPolicy ON *;",
          "DENY elasticloadbalancing:ConfigureHealthCheck, elasticloadbalancing:DeleteLoadBalancerListeners, elasticloadbalancing:DeregisterInstancesFromLoadBalancer, elasticloadbalancing:ModifyLoadBalancerAttributes, elasticloadbalancing:RegisterInstancesWithLoadBalancer ON *;"
        ]] }
      }
    },
    "CogitoPolicy": {
      "Type": "AWS::IAM::ManagedPolicy",
      "Properties": {
        "PolicyDocument": { "Fn::GetAtt": ["CogitoResource", "PolicyDocument"] }
      }
    }
  }
}
